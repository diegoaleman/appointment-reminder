<h1>Patient Information</h1>
<form>
  <div class="form-group">
    <label>Name</label>
    <input class="form-control" type="text" value="<%= @patient.name %>" readonly>
  </div>

  <div class="form-group">
    <label>Email</label>
    <input class="form-control" type="email" value="<%= @patient.email %>" readonly>
  </div>

  <div class="form-group">
    <%= link_to "Patient List", patients_path, class: "btn btn-dark" %>
    <%= link_to "Edit", edit_patient_path(@patient), class: "btn btn-primary" %>
  </div>
</form>



