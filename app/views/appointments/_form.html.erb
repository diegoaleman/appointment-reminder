<%= form_with model: @appointment, local: true do |form|%>
  <div class="form-group">
    <%= form.label :cause %>
    <%= form.text_area :cause, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :patient %>
    <%= form.collection_select(:patient_id, Patient.all, :id, :name, {prompt: "Select patient"}, class: "form-control")  %>
  </div>
  <div class="form-group">
    <%= form.label :physician %>
    <%= form.collection_select(:physician_id, Physician.all, :id, :name, {prompt: "Select physician"}, class: "form-control") %>
  </div>
  <div class="form-check">
    <%= form.check_box :reminder, class: "form-check-input" %>
    <%= form.label :reminder, class: "form-check-label" %>
  </div>
  <br/>
  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-default btn-primary" %>
  </div>
<% end %>
