<h1>Appointment Information</h1>
<form>
  <div class="form-group">
    <label>Cause</label>
    <textarea class="form-control" readonly><%= @appointment.cause %></textarea>
  </div>
  <div class="form-group">
    <label>Patient</label>
    <input class="form-control" type="text" value="<%= @appointment.patient.name %>" readonly>
  </div>
  <div class="form-group">
    <label>Physician</label>
    <input class="form-control" type="text" value="<%= @appointment.physician.name %>" readonly>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" <%= 'checked' if @appointment.reminder %> disabled>
    <label class="form-check-label">Reminder</label>
  </div>

  <% if @appointment.reminder %>
    <%= link_to 'Resend reminder to patient', appointment_send_reminder_path(@appointment, :option => 'patient'), method: :post, remote: true %>
    <br/>
    <%= link_to 'Resend reminder to physician', appointment_send_reminder_path(@appointment, :option => 'physician'), method: :post, remote: true %>
  <% end %>
</form>
